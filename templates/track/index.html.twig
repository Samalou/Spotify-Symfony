{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        .flex {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        #container {
            flex-direction: column;
            background-color: #232323;
            min-height: 92vh;
            display: flex;
            align-items: center;
        }

        #container form {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 25px;
        }

        #cards_container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 20px;
            width: 100%;
        }


        .card {
            flex-basis: 22%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
            background-color: #131313;
            border: 1px solid white;
            border-radius: 10px;
            margin: 10px;
            padding: 5px;
            width: 200px;
            height: auto;
            color: white;
        }

        .card a img {
            width: 90%;
            height: auto;
            border-radius: 10%;
        }

        .card h3 {
            margin: 10px 0;
            text-align: center;
        }

        .card a {
            text-decoration: none;
            color: #1DB954;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card .duration {
            font-size: 14px;
        }

        .submit {
            background-color: #131313;
            border: 1px solid white;
            color: white;
            height: 30px;
        }

        [type=search] {
            padding-left: 10px;
            background-color: #131313;
            border: 1px solid white;
            color: white;
            height: 30px;
            width: 200px;
            margin-right: 10px;
        }

        #search{
            margin-top: 30px;
            color: white;
        }
        #coeur{
            position: absolute;
            right: 0;
            top: 0;
            width: 30px;
            height: 30px;
        }
    </style>
{% endblock %}

{% block body %}

    <div id="container">
        <h1 id="search">Recherche</h1>

        {{ form_start(form) }}
        {{ form_end(form) }}

        <div id="cards_container">
            {% for track in tracks %}
                <div class="card">
                    <form action="{{ path('app_add_favorites') }}" method="POST" class="flex">
                        <input type="hidden" name="id" value="{{ track.getId() }}">
                        <button type="submit" id="coeur" style="background: none; border: none;">
                            <img src="IMG/coeur.png" alt="Ajouter aux favoris" id="coeur">
                        </button>
                    </form>

                    {% if track.getPictureLink() %}
                        <a href="{{ path('app_track_information', {'id' : track.getId()}) }}">
                            <img src="{{ track.getPictureLink() }}" alt="Image de l'album">
                        </a>
                    {% else %}
                        <img src="/img/placeholder.png" alt="Pas d'image disponible">
                    {% endif %}

                    <h3>{{ track.getName() }}</h3>
                    <a href="{{ track.getSpotifyUrl() }}" target="_blank">Ã‰couter sur Spotify</a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}