{% extends 'base.html.twig' %}

{% block title %}Favoris{% endblock %}

{% block stylesheets %}
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        .flex {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        #container {
            flex-direction: column;
            background-color: #232323;
        }

        #search {
            margin-top: 30px;
            color: white;
        }

        #cards_container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 20px;
            width: 100%;
        }

        .card {
            flex-basis: 22%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
            background-color: #131313;
            border: 1px solid white;
            border-radius: 10px;
            margin: 10px;
            padding: 15px;
            width: 200px;
            height: 450px;
            color: white;
        }

        .card a img {
            width: 100%;
            height: auto;
            border-radius: 10px;
        }

        .card h3 {
            margin: 10px 0;
            text-align: center;
        }

        .card a {
            text-decoration: none;
            color: #1DB954;
        }

        .card .duration {
            font-size: 14px;
        }
    </style>
{% endblock %}

{% block body %}
    <div id="container" class="flex">
        <h1 id="search">Favoris</h1>

        <div id="cards_container">
            {% for track in tracks %}
                <div class="card">
                    {% if track.getPictureLink() %}
                        <a href="{{ path('app_track_information', {'id' : track.getId()}) }}">
                            <img src="{{ track.getPictureLink() }}" alt="Image de l'album">
                        </a>
                    {% else %}
                        <img src="/img/placeholder.png" alt="Pas d'image disponible">
                    {% endif %}

                    <h3>{{ track.getName() }}</h3>
                    <p class="duration">
                        {% set totalSeconds = track.getDurationMs() / 1000 %}
                        {% set minutes = totalSeconds // 60 %}
                        {% set seconds = totalSeconds % 60 %}
                        Durée: {{ minutes }}:{{ '%02d'|format(seconds) }}
                    </p>
                    <p>Popularité: {{ track.getPopularity() }}</p>
                    <a href="{{ track.getSpotifyUrl() }}" target="_blank">Écouter sur Spotify</a>
                </div>
            {% else %}
                <p>Aucun favori trouvé.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
