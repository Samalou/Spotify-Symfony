{% extends 'base.html.twig' %}

{% block title %}Favoris{% endblock %}

{% block stylesheets %}
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        .flex {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        #container {
            flex-direction: column;
            background-color: #232323;
            min-height: 92vh;
            display: flex;
            align-items: center;
        }

        #search {
            margin-top: 30px;
            color: white;
        }

        #cards_container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 20px;
            width: 100%;
        }

        .card {
            flex-basis: 22%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
            background-color: #131313;
            border: 1px solid white;
            border-radius: 10px;
            margin: 10px;
            padding: 5px;
            width: 200px;
            height: auto;
            color: white;
        }

        .card a img {
            width: 100%;
            height: auto;
            border-radius: 10px;
        }

        .card h3 {
            margin: 10px 0;
            text-align: center;
        }

        .card a {
            text-decoration: none;
            color: #1DB954;
        }

        .card .duration {
            font-size: 14px;
        }

        #close-button {
            position: absolute;
            top: 10px;
            right: 10px;
            width: 40px;
            height: 40px;
            background: none;
            border: none;
        }

        #close-button img {
            width: 100%;
            height: auto;
        }
    </style>
{% endblock %}

{% block body %}
    <div id="container">
        <h1 id="search">Favoris</h1>

        <div id="cards_container">
            {% for track in tracks %}
                <div class="card">

                    {% set urlParts = track.getSpotifyUrl()|split('/') %}
                    {% set trackId = urlParts[urlParts|length - 1] %}

                    <button id="close-button" onclick="document.getElementById('del-form-{{ track.getId() }}').submit();">
                        <img src="/img/close.png" alt="Retirer des favoris">
                    </button>

                    <form id="del-form-{{ track.getId() }}" action="{{ path('app_del_favorites') }}" method="POST" style="display: none;">
                        <input type="hidden" name="id" value="{{ track.getId() }}">
                    </form>


                    {% if track.getPictureLink() %}
                        <a href="{{ path('app_track_information', {'id' : trackId}) }}">
                            <img src="{{ track.getPictureLink() }}" alt="Image de l'album">
                        </a>
                    {% else %}
                        <img src="/img/placeholder.png" alt="Pas d'image disponible">
                    {% endif %}

                    <h3>{{ track.getName() }}</h3>

                    <a href="{{ track.getSpotifyUrl() }}" target="_blank">Ã‰couter sur Spotify</a>
                </div>
            {% else %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
