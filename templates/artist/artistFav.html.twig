{% extends 'base.html.twig' %}

{% block title %}Favoris d'Artistes{% endblock %}

{% block stylesheets %}
    <style>
        .flex {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        #container {
            flex-direction: column;
            background-color: #232323;
            min-height: 92vh;
            display: flex;
            align-items: center;
            padding: 20px;
        }
        #container h1 {
            color: white;
            margin-bottom: 20px;
        }
        #cards_container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            width: 100%;
            margin-top: 20px;
        }
        .card {
            flex-basis: 22%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
            background-color: #131313;
            border: 1px solid white;
            border-radius: 10px;
            margin: 10px;
            padding: 5px;
            color: white;
            transition: transform 0.3s;
        }
        .card img {
            width: 90%;
            height: auto;
            border-radius: 10%;
        }
        .card h3 {
            margin: 10px 0;
            text-align: center;
        }
        .card a {
            text-decoration: none;
            color: #1DB954;
            text-align: center;
            margin-top: 5px;
        }
        #close-button {
            position: absolute;
            top: 10px;
            right: 10px;
            width: 40px;
            height: 40px;
            background: none;
            border: none;
        }

        #close-button img {
            width: 100%;
            height: auto;
        }
    </style>
{% endblock %}

{% block body %}
    <div id="container">
        <h1>Favoris Artistes</h1>

        <div id="cards_container">
            {% for artist in artistes %}

                {% set urlParts = artist.spotifyUrl|split('/') %}
                {% set artistId = urlParts[urlParts|length - 1] %}

                <div class="card">
                    <a href="{{ path('app_artist_information', {'id': artistId}) }}">
                        <img src="{{ artist.imageUrl }}" alt="{{ artist.id }}">
                    </a>

                    <h3>{{ artist.name }}</h3>
                    <a href="{{ artist.spotifyUrl }}" target="_blank">Ã‰couter sur Spotify</a>

                    <form id="del-form-{{ artist.id }}" action="{{ path('app_del_artist_favorites') }}" method="POST" style="display: inline;">
                        <input type="hidden" name="id" value="{{ artist.id }}">
                        <button id="close-button" type="submit">
                            <img src="/img/close.png" alt="Retirer des favoris">
                        </button>
                    </form>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}