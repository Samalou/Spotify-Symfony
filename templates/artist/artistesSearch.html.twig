{% extends './base.html.twig' %}

{% block stylesheets %}
    <style>
        .flex {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        #container {
            flex-direction: column;
            background-color: #232323;
            min-height: 92vh;
            display: flex;
            align-items: center;
        }

        #container form {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 25px;
        }

        #cards_container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 20px;
            width: 100%;
        }

        .card {
            flex-basis: 22%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
            background-color: #131313;
            border: 1px solid white;
            border-radius: 10px;
            margin: 10px;
            padding: 5px;
            width: 200px;
            height: auto;
            color: white;
            position: relative; /* Pour le positionnement du cœur */
        }

        .card img {
            width: 90%;
            height: auto;
            border-radius: 10%;
        }

        .card h3 {
            margin: 10px 0;
            text-align: center;
        }

        .card p {
            text-align: center;
            margin: 5px 0;
        }

        .card button {
            background: none;
            border: none;
            cursor: pointer;
        }

        .submit {
            background-color: #131313;
            border: 1px solid white;
            color: white;
            height: 30px;
        }

        [type=search] {
            padding-left: 10px;
            background-color: #131313;
            border: 1px solid white;
            color: white;
            height: 30px;
            width: 200px;
            margin-right: 10px;
        }

        #search {
            margin-top: 30px;
            color: white;
        }

        /* Styles pour l'icône de cœur */
        #coeur {
            position: absolute;
            right: 10px; /* Ajuste selon tes préférences */
            top: 10px; /* Ajuste selon tes préférences */
        }

        .card .heart-filled {
            color: pink;
        }

        .card .heart-empty {
            color: #ff69b4;
        }
    </style>
{% endblock %}

{% block body %}
    <div id="container">
        <h1 id="search">Recherche d'Artistes</h1>

        {{ form_start(form) }}
        {{ form_end(form) }}

        <div id="cards_container">
            {% for artist in artistes %}
                <div class="card">
                    {% if artist.images is defined and artist.images|length > 0 %}
                        <img src="{{ artist.images[0].url }}" alt="{{ artist.name }}">
                    {% else %}
                        <img src="/img/placeholder_artist.png" alt="Pas d'image disponible">
                    {% endif %}

                    <h3>{{ artist.name }}</h3>
                    <p>Genres : {{ artist.genres|join(', ') }}</p>

                    {% if app.user %}
                        {% if app.user.getArtists().contains(artist) %}
                            <form action="{{ path('app_del_artist_favorites') }}" method="POST" class="flex">
                                <input type="hidden" name="id" value="{{ artist.id }}">
                                <button type="submit" id="coeur" class="heart-filled">
                                    <i class="fas fa-heart"></i>
                                </button>
                            </form>
                        {% else %}
                            <form action="{{ path('app_add_artist_favorites') }}" method="POST" class="flex">
                                <input type="hidden" name="id" value="{{ artist.id }}">
                                <button type="submit" id="coeur" class="heart-empty">
                                    <i class="far fa-heart"></i>
                                </button>
                            </form>
                        {% endif %}
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
